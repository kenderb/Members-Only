<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= display_user(current_user.present?, User.find(post.user_id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Post', new_post_path %>

<%= display_button(current_user) %>
